<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    tools:context=".activity.ProcessManagerActivity">

    <ImageView
        android:id="@+id/iv_process_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="54dp"
        android:src="@mipmap/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/process_manager"
        android:textColor="@color/title_color"
        android:textSize="20sp"/>

    
    <ImageView
        android:id="@+id/iv_process"
        android:src="@mipmap/ic_process"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/iv_process_back"
        android:layout_width="120dp"
        android:layout_height="120dp">
    </ImageView>
    <TextView
        android:id="@+id/tv_memory_usage"
        android:layout_toRightOf="@id/iv_process"
        android:layout_below="@id/iv_process_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textColor="@color/title_color"
       >
    </TextView>
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_memory_usage"
        android:layout_toRightOf="@id/iv_process"
        android:layout_marginLeft="30dp"
        android:textColor="@color/title_color"
        android:gravity="center_horizontal"
        android:text="@string/memory_usage"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:textSize="28sp"
        android:layout_toRightOf="@id/iv_process"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_hint"
        android:textColor="@color/title_color"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/iv_process"
        android:layout_marginLeft="30dp"
        android:text="@string/running_apps"
        android:layout_below="@id/tv_size"
        android:textColor="@color/title_color"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_process"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="160dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/btn_selector"
        android:text="@string/start"
        android:textAllCaps="false"
        android:textColor="@color/text_seletor"
        android:textSize="17sp" />


    <RelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_below="@id/iv_process"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp">
        <ImageView
            android:id="@+id/iv_nodata"
            android:src="@mipmap/ic_nodata"
          android:layout_centerInParent="true"
            android:layout_width="275dp"
            android:layout_height="275dp">
        </ImageView>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/hint_color"
            android:text="@string/app_not_found"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_ad"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </FrameLayout>



</RelativeLayout>